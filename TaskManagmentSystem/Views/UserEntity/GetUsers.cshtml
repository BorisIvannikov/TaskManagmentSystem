@using TaskManagmentSystem.Domain.Entity;
@model List<UserEntity>

<h2>Cписок пользователей</h2>

<div>
<table class="table table-dark table-hover" name="UserTable">
    <thead>
        <tr>
            <th>Id</th>
            <th>Имя</th>
            <th>Должность</th>
        </tr>
    </thead>
    <tbody>
        <div>
            @if (Model != null)
            {
                @foreach (var user in Model)
                {
                <tr>
                    <td>@user.UserEntityId</td>
                    <td>@user.Name</td>
                    <td>@user.Position</td>
                </tr>
                }
            }
        </div>
</table>
</div>
